{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "functions": {
        "server.js": {
            "includeFiles": [
                "node_modules/tesseract.js-core/tesseract-core-simd.wasm",
                "node_modules/tesseract.js/tessdata/eng.traineddata.gz"
            ]
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/server.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "*" }
            ]
        }
    ]
}
